@model DocViewModel
@{
    ViewData["Title"] = (Model.IsAll ? "" : "Search '" + Model.SearchText + "' | ") + "Informations";
    ViewData["Description"] = Model.IsAll ? "Information List" : "Information search for '" + Model.SearchText + "'";
    ViewData["MetaColor"] = "#FFFFFF";
}

<span class="center_helper">
    <div class="jumbotron">
        <h3>Informations</h3>
        <br>Informations explain internal parts of scripts.
    </div>

    <input type="text" id="search_bar" placeholder="Search Informations...">
    <script>
        document.getElementById('search_bar').addEventListener('keydown', function(e) {
            if (!e)  {
                var e = window.event;
            }
            if (e.keyCode == 13) {
                document.location.href = '/Docs/Information/' + encodeURIComponent(document.getElementById('search_bar').value);
            }
        }, false);
    </script>
    <br><br>

    @if (Model.IsAll)
    {
        <h5>Showing all @Model.Max Informations...</h5>
    }
    else
    {
        <h5>Showing @Model.CurrentlyShown out of @Model.Max Informations...</h5>
    }
</span>

@Model.Content
